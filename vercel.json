{
  "version": 2,
  "buildCommand": "npm --prefix frontend install && npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  },
  "rewrites": [
    { "source": "/api/scan-file", "destination": "/api/index.py" },
    { "source": "/api/version", "destination": "/api/index.py" },
    { "source": "/api/health", "destination": "/api/index.py" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
